  .card-body {
    height: 500px;
    border-radius: 40px;
    border: 0px solid #000;
    background: #FFF;
    box-shadow: 1px 11 100px rgba(0, 0, 0, 0.07);

  }

  .login {
    color: #777;
    text-align: center;
    font-size: 40px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
  }

  .btn {
    background-color: #392539;
    color: white;
    border-radius: 30px;
  }

  .btn:hover {
    background-color: #392539;
    color: white;
  }

  .nav-div {
    height: 80px;
  }

  @media (max-width: 760px) {
    .nav-div {
      height: 60px;
    }

    .width-user {
      visibility: hidden;
    }

    footer {
      margin-bottom: 0;
      padding-bottom: 0;
      bottom: 0;
      position: fixed;
    }
  }

  @media (min-width: 760px) and (max-width: 990px) {
    .nav-div {
