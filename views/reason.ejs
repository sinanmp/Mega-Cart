              </div>
            </div>
            <!-- Right elements -->
          </div>
        </div>
        </div>
        <!-- Jumbotron -->
      
      </header>


<div class="container" style="height: 89vh;">
    <div class="row justify-content-center">
        <div class="col-md-6 border mt-5">
            <form id="reasonForm" action="/cancel/reason?id=<%=id %>" method="post">
                <label class="form-label mt-3">Select a Reason (Optional):</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="reasonDescription" id="reasonDescription1">
                    <label class="form-check-label" for="reasonDescription1">Product doesn't match the description.</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="reasonDescription" id="reasonDescription2">
                    <label class="form-check-label" for="reasonDescription2">Received the wrong item.</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="reasonDescription" id="reasonDescription3">
                    <label class="form-check-label" for="reasonDescription3">Item arrived damaged or defective.</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="reasonDescription" id="reasonDescription4">
                    <label class="form-check-label" for="reasonDescription4">Changed my mind.</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="reasonDescription" id="reasonDescription5">
                    <label class="form-check-label" for="reasonDescription5">Found a better price elsewhere.</label>
                </div>

                <label for="otherReason" class="form-label">Other Reason (if applicable):</label>
                <input type="text" class="form-control" id="otherReason" name="otherReason">

                <label for="additionalComments" class="form-label">Additional Comments (Optional):</label>
                <textarea class="form-control" id="additionalComments" name="additionalComments"></textarea>

                <button type="submit" style="background-color: #392539; color: white;" class="btn mt-4 mb-4">Submit</button>
            </form>
        </div>
    </div>
</div>





  <footer class="text-center text-white"
